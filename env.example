# === REQUIRED CONFIGURATION ===
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=-1001234567890
ADMIN_USERS=123456789,987654321

# === DATABASE ===
DATABASE_URL=postgresql://antispam:your_strong_password@localhost:5432/antispam_db
POSTGRES_PASSWORD=your_strong_password_here

# === REDIS ===
REDIS_URL=redis://localhost:6379/0

# === EXTERNAL APIS ===
OPENAI_API_KEY=sk-your_openai_api_key_here
CAS_API_URL=https://api.cas.chat/check

# === SECURITY ===
JWT_SECRET_KEY=your_super_secret_jwt_key_256_bits_minimum
API_SECRET_KEY=your_api_secret_key_for_hmac_signatures

# === ENVIRONMENT ===
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# === HTTP SERVER ===
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# === MONITORING ===
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# === PERFORMANCE ===
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10
HTTP_WORKERS=4

# === SPAM DETECTION ===
SPAM_THRESHOLD=0.7
AUTO_BAN_THRESHOLD=0.9
MAX_PROCESSING_TIME=1.5

# === OPTIONAL FEATURES ===
ENABLE_WEBHOOK=false
WEBHOOK_URL=https://your-domain.com/webhook

# === SSL/TLS (for production) ===
SSL_CERT_PATH=/etc/ssl/certs/antispam.crt
SSL_KEY_PATH=/etc/ssl/private/antispam.key